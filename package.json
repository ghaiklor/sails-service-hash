{
  "name": "sails-service-hash",
  "description": "Service for Sails framework with Hash features",
  "main": "lib/index.js",
  "scripts": {
    "compile": "babel src --out-dir lib",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "prepublish": "npm run compile",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "babel-node ./node_modules/.bin/isparta cover _mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ghaiklor/sails-service-hash.git"
  },
  "keywords": [
    "sails",
    "service",
    "hash"
  ],
  "author": "ghaiklor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ghaiklor/sails-service-hash/issues"
  },
  "homepage": "https://github.com/ghaiklor/sails-service-hash#readme",
  "dependencies": {
    "bcryptjs": "2.3.0",
    "lodash": "3.10.1"
  },
  "devDependencies": {
    "babel": "5.8.34",
    "chai": "3.4.1",
    "coveralls": "2.11.4",
    "cz-conventional-changelog": "1.1.4",
    "isparta": "4.0.0",
    "mocha": "2.3.4",
    "semantic-release": "4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "tag": "latest"
  },
  "release": {
    "branch": "master"
  }
}
